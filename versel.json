# versel.json

{
  "version": 2,
  "builds": [
    {
      "src": "student_management_app/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "ui/staticfiles"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "student_management_app/wsgi.py"
    }
  ],
  "outputDirectory": "ui/staticfiles"
}
